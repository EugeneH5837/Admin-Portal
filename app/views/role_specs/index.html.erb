<p id="notice"><%= notice %></p>

<h1>Role Specs</h1>

<table>
  <thead>
    <tr>
      <th>Link</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @role_specs.each do |role_spec| %>
      <tr>
        <td><%= role_spec.link %></td>
        <td><%= role_spec.role_id %></td>
        <td><%= link_to 'Show', role_spec %></td>
        <td><%= link_to 'Edit', edit_role_spec_path(role_spec) %></td>
        <td><%= link_to 'Destroy', role_spec, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

