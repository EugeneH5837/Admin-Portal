<p id="notice"><%= notice %></p>

<h1>Role Specific Links</h1>

<table>
  <thead>
    <tr>
      <th>Link</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @role_specs.each do |role_spec| %>
      <tr>
        <td><%= link_to role_spec.link, role_spec, class: "btn button-xs btn-xs" %></td>
        <td><button class = "btn button-xs role btn-xs"><%= role_spec.role_id %></button></td>
        <td><%= link_to 'Show', role_spec, class: "btn button-xs btn-xs" %></td>
        <td><%= link_to 'Edit', edit_role_spec_path(role_spec), class: "btn button-xs btn-xs" %></td>
        <td><%= link_to 'Remove', role_spec, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn button-xs btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Add New Role Specific Link', new_role_spec_path, class: "btn button-xs" %>
