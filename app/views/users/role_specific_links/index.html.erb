<p id="notice"><%= notice %></p>

<h1>Role Specific Links</h1>

<table>
  <thead>
    <tr>
      <th>Link</th>
      <th>role_id</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @role_specific_links.each do |role_specific_link| %>
      <tr>
        <td><%= role_specific_link.link %></td>
        <td><%= role_specific_link.role_id %></td>
        <td><%= link_to 'Show', role_specific_link %></td>
        <td><%= link_to 'Edit', edit_role_specific_link_path(role_specific_link) %></td>
        <td><%= link_to 'Destroy', role_specific_link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

