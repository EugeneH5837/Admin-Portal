<div class="container">
  <div class="row">
    <h3>Users</h3>
    <div class="column">
      <table class="table">
        <tbody>
          <% @users.each do |user| %>
            <tr>
              <%= render user %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div> <%= link_to 'View Role Links', role_specs_path, class: "btn btn-primary" %> <br> </div >
    <div> <%= link_to 'View Global Links', global_links_path, class: "btn btn-primary" %> <br> </div>
    <div> <%= link_to 'Create New User', new_user_registration_path, class: "btn btn-primary" %> </div>
  </div>
</div>
