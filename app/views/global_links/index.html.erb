<p id="notice"><%= notice %></p>

<h1>Global Links</h1>

<table>
  <thead>
    <tr>
      <th>Link</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @global_links.each do |global_link| %>
      <tr>
        <td><%= link_to global_link.link, global_link, class: "btn button-xs btn-xs" %></td>
        <td><%= link_to 'Edit', edit_global_link_path(global_link), class: "btn button-xs btn-xs" %></td>
        <td><%= link_to 'Remove', global_link, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn button-xs btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create New Global Link', new_global_link_path, class: "btn button-xs btn-xs" %>
